<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/mainscreenicon"
        android:layout_gravity="center"
        android:layout_width="@dimen/mainscreeniconsize"
        android:layout_height="@dimen/mainscreeniconsize"
        android:layout_marginTop="@dimen/mainscreeniconmargin"
        android:layout_marginBottom="@dimen/mainscreeniconmargin"
        />

    <TextView
        android:id="@+id/iconlabel"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/mainscreeniconlabeltextsize"
        android:layout_marginTop="@dimen/mainscreeniconmargin"
        android:layout_marginBottom="@dimen/mainscreeniconmargin"
        />

</LinearLayout>