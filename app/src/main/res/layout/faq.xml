<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/fragment_margin"
        android:layout_marginRight="@dimen/fragment_margin"
        android:layout_marginTop="@dimen/fragment_margin"
        android:layout_marginBottom="@dimen/fragment_margin"
        android:background="@drawable/bg_parent_rounded_corner"
        android:paddingBottom="@dimen/fragment_padding_top_bottom"
        android:paddingTop="@dimen/fragment_padding_top_bottom"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Frequently Asked Questions"
                        android:id="@+id/ftitle"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/title_layout_bottom_margin"/>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/question_margin_left_right"
                    android:layout_marginLeft="@dimen/question_margin_left_right"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/question1"
                    android:layout_marginBottom="@dimen/question_bottom_margin"
                    android:textColor="@color/question_color"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/answer_margin_right"
                    android:layout_marginLeft="@dimen/answer_margin_left"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/answer1"
                    android:layout_marginBottom="@dimen/answer_bottom_margin"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/question_margin_left_right"
                    android:layout_marginLeft="@dimen/question_margin_left_right"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/question2"
                    android:layout_marginBottom="@dimen/question_bottom_margin"
                    android:textColor="@color/question_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/answer_margin_right"
                    android:layout_marginLeft="@dimen/answer_margin_left"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/answer2"
                    android:layout_marginBottom="@dimen/answer_bottom_margin"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/question_margin_left_right"
                    android:layout_marginLeft="@dimen/question_margin_left_right"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/question3"
                    android:layout_marginBottom="@dimen/question_bottom_margin"
                    android:textColor="@color/question_color"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/answer_margin_right"
                    android:layout_marginLeft="@dimen/answer_margin_left"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/answer3"
                    android:layout_marginBottom="@dimen/answer_bottom_margin"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/question_margin_left_right"
                    android:layout_marginLeft="@dimen/question_margin_left_right"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/question4"
                    android:layout_marginBottom="@dimen/question_bottom_margin"
                    android:textColor="@color/question_color"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/answer_margin_right"
                    android:layout_marginLeft="@dimen/answer_margin_left"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/answer4"
                    android:layout_marginBottom="@dimen/answer_bottom_margin"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/question_margin_left_right"
                    android:layout_marginLeft="@dimen/question_margin_left_right"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/question5"
                    android:layout_marginBottom="@dimen/question_bottom_margin"
                    android:textColor="@color/question_color"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/answer_margin_right"
                    android:layout_marginLeft="@dimen/answer_margin_left"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/answer5"
                    android:layout_marginBottom="@dimen/answer_bottom_margin"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/question_margin_left_right"
                    android:layout_marginLeft="@dimen/question_margin_left_right"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/question6"
                    android:layout_marginBottom="@dimen/question_bottom_margin"
                    android:textColor="@color/question_color"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/answer_margin_right"
                    android:layout_marginLeft="@dimen/answer_margin_left"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/answer6"
                    android:layout_marginBottom="@dimen/answer_bottom_margin"/>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>